<%- include('partials/header1') %>

<div class="info">
    <div class="subinfo">Refresh Rate: <span id="rate"></span></div>
</div>
<div class="main"></div>
<div class="bottom-right btn-info" data-toggle="modal" data-target="#myModal">
    <div class="circle">
        <i class="fa fa-file-pdf"></i>
    </div>
</div>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><i class="fa fa-info-circle"></i> Garbage Info</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table id="table" class="table table-striped table-bordered" style="text-align: center; width: 100%;">
                    <thead>
                        <tr>
                            <th>SNo</th>
                            <th>Floor</th>
                            <th>Garbage</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" onclick="ExportToExcel()">Generate Excel</button>
                <button type="button" class="btn btn-primary" onclick="generate()">Generate PDF</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="myModal-t">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><i class="fa fa-info-circle"></i> Refresh Rate</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form name="rform" method="POST" action="/refresh">
            <div class="modal-body" style="height: auto;">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Select Refresh Rate</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="rate">
                        <option value="30000">30 seconds</option>
                        <option value="60000">1 minute</option>
                        <option value="300000">5 minutes</option>
                        <option value="600000">10 minutes</option>
                        <option value="1800000">30 minutes</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="setrate()">Set Refresh Rate</button>
            </div>
            </form>
        </div>
    </div>
</div>

<script>let count = Number('<%= refresh %>');</script>
<script src="js/index.js" ></script>
